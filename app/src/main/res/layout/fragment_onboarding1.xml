<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Onboarding1">

    <TextView
        android:id="@+id/tv_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_kr"
        android:textSize="20sp"
        android:fontFamily="@font/noto_sans_kr_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:gravity="center"
        />

    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding" />

    <ImageView
        android:id="@+id/iv_github"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_github"
        app:layout_constraintTop_toBottomOf="@id/v_line1"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_github"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/noto_sans_kr_bold"
        app:layout_constraintTop_toBottomOf="@id/iv_github"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:text="다음으로"/>

</androidx.constraintlayout.widget.ConstraintLayout>